@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-6">
        <h2>NZ Smart ID Reader</h2>
        <p>
            Upload an image to verify if it is a New Zealand's driver licence and to read its content.
        </p>
        <form asp-controller="Home" asp-action="Upload" method="post" enctype="multipart/form-data">
            <input type="file" name="drivingLicence" />
            <button type="submit" name="btnSend">Send</button>
        </form>
        @ViewData["Message"]
    </div>
    <div class="col-md-6">
        <h2>Content:</h2>
        <span class="text-warning">TODO: Implement OCR</span>
    </div>
</div>
